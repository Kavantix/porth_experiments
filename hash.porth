macro p 31 end
macro m 1000000009 end

macro hash_str_inner
  0 !hash_value
  1 !p_pow
  0 while dup @s.count < do
    // (c - 'a' + 1)
    dup @s.data + @8 'a' - 1 + @p_pow * m mod
    @hash_value + !hash_value
    @p_pow p * m mod !p_pow
    1 +
  end drop
  @hash_value
end

